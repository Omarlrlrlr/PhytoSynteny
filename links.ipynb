import pandas as pd
import os 


# Fichiers d’entrée
triplets_file = "/home/z800/Bureau/omar/resultats/geneviewer/FNc25_PPcx/cluster25_matched_blocks.uniqpp" # fichier blocks générer par le "cross-reference mapping" 
clusters_file = "/home/z800/Bureau/omar/resultats/geneviewer/FNc25_PPcx/genes_within_3clusters_annotated.csv"  # fichier csv "BED_visu" générer par le script "tableau.sh"


# Lire fichier blocks
triplets = pd.read_csv(triplets_file, sep="\t", header=None, names=["gene1", "gene2", "gene3"])

# Lire le CSV des clusters
df_clusters = pd.read_csv(clusters_file)

# Créer un dictionnaire gene --> cluster
gene2cluster = dict(zip(df_clusters["gene"], df_clusters["cluster"]))

# Fonction pour chercher le cluster
def get_cluster(gene):
    if gene == ".":
        return "."
    return gene2cluster.get(gene, "NA")

# Liste pour stocker les paires
rows = []

# Parcourir chaque ligne et produire uniquement les paires adjacentes
for _, row in triplets.iterrows():
    genes = [row["gene1"], row["gene2"], row["gene3"]]
    clusters = [get_cluster(g) for g in genes]
    
    # uniquement les paires (0,1) et (1,2)
    for i, j in [(0,1), (1,2)]:
        g1, g2 = genes[i], genes[j]
        c1, c2 = clusters[i], clusters[j]
        if "." in (g1, g2):
            continue
        # ordonner les clusters pour avoir 1-2 pas 2-1
        try:
            c1_int, c2_int = int(c1), int(c2)
            cluster_pair = f"{min(c1_int, c2_int)}-{max(c1_int, c2_int)}"
        except:
            cluster_pair = f"{c1}-{c2}"
        rows.append([g1, g2, cluster_pair])

# Convertir en DataFrame
df_out = pd.DataFrame(rows, columns=["gene1", "gene2", "cluster_pair"])


# Trier par cluster_pair
df_sorted = df_out.sort_values(by=["cluster_pair", "gene1", "gene2"])

#sauvegarder
df_sorted.to_csv("links", sep=",", index=False)


print("Fichier `links` généré.")
print(df_out.head())

